=content_for :page_title do

  =icon :icon => @sprint.icon, :css_classes => 'red'
  = @sprint.title

=content_for :side_panel do
  %h1 Hello

#burn-edit.hidden-print{style: "display:none;"}
  .row
    .col-xs-12
      =render 'form'
  %br
  .row
    .col-xs-12
      .row
        -for iteration in @iterations
          %a{:href=> edit_sprint_iteration_path(@sprint, iteration)}
            .iteration.col-xs-2{class: iteration.panel_class, :"data-link-to" => edit_sprint_iteration_path(@sprint, iteration)}
              .iteration-date=iteration.date
              .panel
                .iteration-points-completed=iteration.points_completed
        
      
.row#burn-show

  .col-xs-4
    %dl.dl-horizontal
      %dt Start Date
      %dd=@sprint.start_date
      %dt Total Points
      %dd= @sprint.total_points.to_f
      %dt Points Remaining
      %dd= @sprint.points_remaining
  .col-xs-8
    .text-center
      %h2
        =icon icon: "fire-extinguisher", css_classes: "green"
        %span.red Feel the Burn
      %br
    =render 'burndown'





-content_for :javascript do
  :coffee

    $(document).keyup (e) ->
      if e.keyCode is 27
      
        if $('#burn-show').is(":visible")
          $("#burn-show").fadeToggle ->
            $("#burn-edit").fadeToggle()
            return
        
        if $('#burn-edit').is(":visible")
          $("#burn-edit").fadeToggle ->
            $("#burn-show").fadeToggle()
            return
        
        
      return

    # esc